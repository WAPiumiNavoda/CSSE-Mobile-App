    <TextView
        android:id="@+id/updateTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:text="Place Order Notice"
